@model List<string>
@{
    /**/

    ViewBag.Title = "UploadFile";
}

<h2>UploadFile</h2>

@using (Html.BeginForm("UploadFile", "Upload", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>
        @Html.TextBox("file", "", new { type = "file" }) <br />
        <input type="submit" value="Upload" />
        @ViewBag.Message
    </div>
}

@if (Model?.Count > 0)
    {
        foreach (var imagePath in (List<string>)Model)
        {
            var img = new FileInfo(imagePath);
            <img src="@Url.Content(String.Format("~/filter/{0}", img.Name))" />
        }
    }

